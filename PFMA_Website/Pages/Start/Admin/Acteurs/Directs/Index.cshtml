                @Html.DisplayNameFor(model => model.Producteur[0].nom_op)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producteur[0].producteur_paddy_semences)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producteur[0].superficie)
            </th>
