            <td>
                @Html.DisplayFor(modelItem => item.nom_op)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.producteur_paddy_semences)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.superficie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.localistation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.site_internet)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProducteurID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProducteurID">Details</a> |
